<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Configurações de Conexão com o Banco de Dados -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/sistema</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">12345678</property>

		<!-- Pool de Conexões -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Gerenciamento do Contexto das Sessões -->
		<property name="current_session_context_class">thread</property>

		<!-- Cache de Segundo Nível -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Mostra as SQLs Geradas -->
		<property name="show_sql">true</property>

		<!-- Cria as tabelas do banco de dados -->
		<property name="hbm2ddl.auto">validate</property>
		
		<mapping class="br.com.soaresEroticos.domain.Estado"/>
		<mapping class="br.com.soaresEroticos.domain.Cidade"/>
		<mapping class="br.com.soaresEroticos.domain.Fornecedor"/>
		<mapping class="br.com.soaresEroticos.domain.Produto"/>
		<mapping class="br.com.soaresEroticos.domain.Cliente"/>
		<mapping class="br.com.soaresEroticos.domain.Funcionario"/>
		<mapping class="br.com.soaresEroticos.domain.ItemVenda"/>
		<mapping class="br.com.soaresEroticos.domain.Pessoa"/>
		<mapping class="br.com.soaresEroticos.domain.Usuario"/>
		<mapping class="br.com.soaresEroticos.domain.Venda"/>
		<mapping class="br.com.soaresEroticos.domain.Historico"/>
		<mapping class="br.com.soaresEroticos.domain.Caixa"/>
		<mapping class="br.com.soaresEroticos.domain.Movimentacao"/>
		
		
	</session-factory>

</hibernate-configuration>